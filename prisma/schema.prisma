generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id    Int    @id @default(autoincrement())
  name  String @unique
  class Class
  level Int    @default(1)
  exp   Int    @default(0)

  @@map("players")
}

model ExperienceTable {
  level       Int @id
  expRequired Int @map("exp_required")

  @@map("experience_table")
}

enum Class {
  Knight
  Mage
  Archer
}
